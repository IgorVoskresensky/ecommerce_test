<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="224dp"
    android:layout_marginEnd="9dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp">

    <ImageView
        android:id="@+id/ivItemFlashSale"
        android:layout_width="180dp"
        android:layout_height="224dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/phone_example" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_dude_from_flash_item" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvDiscountFlashSaleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_flash_sale_discount"
            android:fontFamily="@font/montserrat_light"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="30% off"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCategoryFlashSaleItem"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="@drawable/bg_category_item_latest"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:text="Phones"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <!--    Я изменил цвет текста названия и цены на черный,
                т.к. на изображениях из API белый текст не видно -->

        <TextView
            android:id="@+id/tvNameFlashSaleItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Samsung S23"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvPriceFlashSaleItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_light"
                android:text="$ 180000"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/btnAddToFavoritesCategoryItem"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_btn_add_to_favorites_flash_item" />


            <ImageView
                android:id="@+id/btnAddToCartCategoryItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_btn_add_to_cart_category_item_latest" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>