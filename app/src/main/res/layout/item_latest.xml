<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dp"
    android:layout_height="150dp"
    android:layout_marginEnd="12dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="115dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/ivItemLatest"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:src="@drawable/phone_example"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvCategoryLatestItem"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:gravity="center"
                android:background="@drawable/bg_category_item_latest"
                android:text="Phones"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_light"/>

            <TextView
                android:id="@+id/tvNameLatestItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Samsung S23"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="11sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                >

                <TextView
                    android:id="@+id/tvPriceLatestItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:text="$ 180000"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="8sp"/>

                <ImageView
                    android:id="@+id/btnAddToCartCategoryItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_btn_add_to_cart_category_item_latest"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.cardview.widget.CardView>